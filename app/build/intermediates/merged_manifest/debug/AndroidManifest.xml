<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hifi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="33" />

    <application
        android:name="com.example.hifi.application.HiFiApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.hifi.presentation.HomeActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hifi.presentation.ProductDescriptionActivity"
            android:label="@string/product_description" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hifi.presentation.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.hifi.presentation.SearchProductActivity"
            android:label="@string/search_product" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hifi.presentation.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.hifi.presentation.UserSignInActivity"
            android:label="@string/sign_in" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hifi.presentation.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.hifi.presentation.UserCreateAccountActivity"
            android:label="@string/sign_up" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hifi.presentation.UserSignInActivity" />
        </activity>
        <activity
            android:name="com.example.hifi.presentation.CartActivity"
            android:label="@string/cart" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hifi.presentation.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.hifi.presentation.EditProfileActivity"
            android:label="@string/cart" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hifi.presentation.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.hifi.presentation.OrderHistoryActivity"
            android:label="@string/order_history" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hifi.presentation.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.hifi.presentation.WishListActivity"
            android:label="@string/wishlist" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hifi.presentation.HomeActivity" />
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.hifi.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>