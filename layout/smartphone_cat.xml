<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#162DAC"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Left menu -->
        <ImageView
            android:id="@+id/header_left_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Right user -->
        <ImageView
            android:id="@+id/account_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/shopping_cart_menu"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Right Cart Icon -->
        <ImageView
            android:id="@+id/shopping_cart_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Right Logo Icon -->
        <ImageView
            android:id="@+id/home_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/account_menu"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/earbudbutton"
        android:layout_width="177dp"
        android:layout_height="70dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="80dp"
        android:onClick="buttonOnClick"
        android:tag="3"
        android:text=" Google Pixel 6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="109dp"
        android:layout_height="127dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="21dp"
        android:clickable="true"
        android:contentDescription="d"
        android:tag="3"
        android:onClick="buttonOnClick"
        app:layout_constraintEnd_toStartOf="@+id/earbudbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iphone" />

</androidx.constraintlayout.widget.ConstraintLayout>

